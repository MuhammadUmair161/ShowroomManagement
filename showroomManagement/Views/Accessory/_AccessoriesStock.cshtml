@model showroomManagement.Models.AccessoriesStock

<div class="mb-2 acd-group">
    <div class="card-header bg-primary rounded-0">
        <h5 class="mb-0">
            <a href="#collapse1" class="btn-block text-white text-left acd-heading" data-toggle="collapse">Add AccessoriesStock</a>
        </h5>
    </div>
    <div id="collapse1" class="collapse" data-parent="#accordionsimplefill">
        <div class="card-body">
            <div class="row">
                <form asp-action="_AccessoriesStock" class="w-100">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <select asp-for="AccessoryId" class="form-control" asp-items="ViewBag.AccessoryId"></select>
                    </div>
                    <div class="form-group">
                        <input asp-for="Quantity" placeholder="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add In Stock" class="btn btn-primary" />
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>
