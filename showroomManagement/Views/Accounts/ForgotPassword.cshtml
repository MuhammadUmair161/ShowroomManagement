
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<!-- Contact section start -->
<div class="contact-section">
    <div class="container">
        <div class="row g-0 login-box">
            <div class="col-lg-6 align-self-center">
                <div class="form-section clearfix">
                    <div class="logo-2 logo-3">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/theme/assets/img/logos/black-logo.png" alt="logo">
                        </a>
                    </div>
                    <h3>Recover your password</h3>
                    <div class="clearfix"></div>
                    <form action="#" method="GET">
                        <div class="form-group clearfix">
                            <input name="email" type="email" class="form-control" placeholder="Email Address" aria-label="Email Address">
                        </div>
                        <div class="form-group clearfix mb-0">
                            <button type="submit" asp-controller="Home" asp-action="index" class="btn-md btn-theme w-100">Send Me Email</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 bg-color-15 align-self-center bg-img">
                <div class="info clearfix">
                    <div class="logo-2">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/theme/assets/img/logos/logo.png" alt="logo">
                        </a>
                    </div>
                    <h3>Welcome to Logdy</h3>
                    <div class="social-list">
                        <a href="#" class="facebook-bg">
                            <i class="fa fa-facebook"></i>
                        </a>
                        <a href="#" class="twitter-bg">
                            <i class="fa fa-twitter"></i>
                        </a>
                        <a href="#" class="google-bg">
                            <i class="fa fa-google"></i>
                        </a>
                        <a href="#" class="linkedin-bg">
                            <i class="fa fa-linkedin"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact section end -->
