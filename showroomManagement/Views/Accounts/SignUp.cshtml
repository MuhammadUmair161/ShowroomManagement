@model showroomManagement.Models.SignUp

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="contact-section">
    <div class="container">
        <div class="row g-0 login-box">
            <div class="col-lg-6 align-self-center">
                <div class="form-section clearfix">
                    <div class="logo-2 logo-3">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/theme/assets/img/logos/black-logo.png" alt="logo">
                        </a>
                    </div>
                    <h3>Create an account</h3>
                    <div class="btn-section clearfix">
                        <a asp-controller="Accounts" asp-action="Login" class="link-btn active btn-1 default-bg">Login</a>
                        <a asp-controller="Accounts" asp-action="SignUp" class="link-btn btn-2 active-bg">Register</a>
                    </div>
                    <div class="clearfix"></div>
                    <form asp-action="SignUp">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group clearfix">
                            <input name="name" type="text" class="form-control" asp-for="FullName" placeholder="Full Name" aria-label="Full Name">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group clearfix">
                            <input name="email" type="email" asp-for="Email" class="form-control" placeholder="Email Address" aria-label="Email Address">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group clearfix">
                            <input name="password" type="password" asp-for="password" class="form-control" placeholder="Password" aria-label="Password">
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>

                        <div class="form-group clearfix mb-0">
                            <button type="submit" value="SignUp" class="btn-md btn-theme float-start w-100">Register</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 align-self-center bg-img">
                <div class="info clearfix">
                    <div class="logo-2">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/theme/assets/img/logos/logo.png" alt="logo">
                        </a>
                    </div>
                    <h3>Welcome to Logdy</h3>
                    <div class="social-list">
                        <a href="#" class="facebook-bg">
                            <i class="fa fa-facebook"></i>
                        </a>
                        <a href="#" class="twitter-bg">
                            <i class="fa fa-twitter"></i>
                        </a>
                        <a href="#" class="google-bg">
                            <i class="fa fa-google"></i>
                        </a>
                        <a href="#" class="linkedin-bg">
                            <i class="fa fa-linkedin"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
