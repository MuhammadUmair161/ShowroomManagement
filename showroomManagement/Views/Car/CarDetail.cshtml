@model IEnumerable<showroomManagement.Models.Car>

@{
    ViewData["Title"] = "CarDetail";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<!-- begin app-main -->
<div class="app-main" id="main">
    <!-- begin container-fluid -->
    <div class="container-fluid">
        <!-- begin row -->
        <div class="row">
            <div class="col-md-12 m-b-30">
                <!-- begin page title -->
                <div class="d-block d-lg-flex flex-nowrap align-items-center">
                    <div class="page-title mr-4 pr-4 border-right">
                        <h1>CarDetail</h1>
                    </div>
                    <div class="breadcrumb-bar align-items-center"></div>
                </div>
                <!-- end page title -->
                <!---------------------->
                <div class="card-body">
                    <div class="accordion w-100" id="accordionsimplefill">
                        <table class="table w-100" id="myTable">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CarImage1)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SittingCapacity)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EngineCapacity)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.HoursePower)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.HasPowerSteering)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.HasAntiLockBreakingSystem)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TransmissionType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.HasPowerWindows)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.HasAirbags)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.HasAutoClimControl)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.HasFogLights)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.HasAlloyRims)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.HasCruiseControl)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsHybrid)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CarType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Company)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        <img src="~/@Html.DisplayFor(modelItem => item.CarImage1)" style="width:50px;height:50px;" class="rounded-circle border-5" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SittingCapacity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EngineCapacity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HoursePower)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HasPowerSteering)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HasAntiLockBreakingSystem)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TransmissionType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HasPowerWindows)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HasAirbags)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HasAutoClimControl)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HasFogLights)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HasAlloyRims)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HasCruiseControl)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsHybrid)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CarType.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Company.Name)
                                    </td>
                                    <td>
                                        <a class="btn btn-danger" asp-action="CarDelete" asp-route-id="@item.Id">Delete</a>
                                        @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>*@

                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end container-fluid -->
</div>
<!-- end app-main -->
