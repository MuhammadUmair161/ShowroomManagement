                                                </div>
                                                <div class="form-group">
                                                    <select asp-for="CarTypeId" placeholder="CarType" class="form-control" asp-items="ViewBag.CarTypeId"></select>
                                                </div>
                                                <div class="form-group">
                                                    <select asp-for="CompanyId" placeholder="Company" class="form-control" asp-items="ViewBag.CompanyId"></select>
                                                </div>
                                                <div class="form-group">
                                                    <input asp-for="EngineCapacity" placeholder="EngineCapacity" class="form-control" />
