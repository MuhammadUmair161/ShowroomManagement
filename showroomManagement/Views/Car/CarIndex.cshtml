@model showroomManagement.Models.Car

@{
    ViewData["Title"] = "CarIndex";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}



<!-- begin app-main -->
<div class="app-main" id="main">
    <!-- begin container-fluid -->
    <div class="container-fluid">
        <!-- begin row -->
        <div class="row">
            <div class="col-md-12 m-b-30">
