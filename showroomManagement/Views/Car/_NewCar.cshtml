@model showroomManagement.Models.NewCar

<div class="mb-2 acd-group">
    <div class="card-header bg-primary rounded-0">
        <h5 class="mb-0">
            <a href="#collapse5" class="btn-block text-white text-left acd-heading" data-toggle="collapse">Add NewCar</a>
        </h5>
    </div>
    <div id="collapse5" class="collapse" data-parent="#accordionsimplefill">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="_NewCar">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <select asp-for="CarId" class="form-control" asp-items="ViewBag.CarId"></select>
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="ModelYear" placeholder="ModelYear" class="form-control" />
                            <span asp-validation-for="ModelYear" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="CurrentPrice" placeholder="CurrentPrice" class="form-control" />
                            <span asp-validation-for="CurrentPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Add NewCar" class="btn btn-primary" />
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

