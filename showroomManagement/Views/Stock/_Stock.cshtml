@model showroomManagement.Models.Stock


<div class="mb-2 acd-group">
    <div class="card-header bg-primary rounded-0">
        <h5 class="mb-0">
            <a href="#collapse" class="btn-block text-white text-left acd-heading" data-toggle="collapse">Add Stock</a>
        </h5>
    </div>
    <div id="collapse" class="collapse show" data-parent="#accordionsimplefill">
        <div class="card-body">
            <div class="row">
                <form asp-action="_Stock" class="w-100">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <select asp-for="CarId" class="form-control" asp-items="ViewBag.CarId"></select>
                    </div>
                    <div class="form-group">
                        <input asp-for="Available" placeholder="Quantity" class="form-control" />
                        <span asp-validation-for="Available" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add Stock" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

