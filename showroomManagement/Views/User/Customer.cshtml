@model showroomManagement.Models.CustomerDetail

@{
    ViewData["Title"] = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Sub banner start -->
<div class="sub-banner">
    <div class="container breadcrumb-area">
        <div class="breadcrumb-areas">
            <h1>Customer Detail</h1>
            <ul class="breadcrumbs">
                <li><a asp-controller="Home" asp-action="index">Home</a></li>
                <li class="active">Customer Detail</li>
            </ul>
        </div>
    </div>
</div>
<!-- Sub Banner end -->
<div class="contact-section">
    <div class="container">
        <div class="row g-0 login-box">
            <div class="col-lg-12 align-self-center">
                <div class="form-section clearfix">
                    <div class="clearfix"></div>
                    <form asp-action="Customer">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group clearfix">
                            <input name="FirstName" type="text" class="form-control" asp-for="FirstName" placeholder="First Name" aria-label="First Name">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group clearfix">
                            <input name="LastName" type="text" class="form-control" asp-for="LastName" placeholder="Last Name" aria-label="Last Name">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group clearfix">
                            <input name="CNIC" asp-for="Cnic" class="form-control" placeholder="CNIC" aria-label="CNIC">
                            <span asp-validation-for="Cnic" class="text-danger"></span>
                        </div>
                        <div class="form-group clearfix">
                            <input name="email" type="email" asp-for="Email" class="form-control" placeholder="Email Address" aria-label="Email Address">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group clearfix">
                            <input name="Address" asp-for="Address" class="form-control" placeholder="Address" aria-label="Address">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group clearfix">
                            <input name="Contact" asp-for="Contact" class="form-control" placeholder="Contact" aria-label="Contact">
                            <span asp-validation-for="Contact" class="text-danger"></span>
                        </div>
                        @*<div class="form-group clearfix">
                            <input name="Contact" asp-for="@Model.Invoices" class="form-control" placeholder="Contact" aria-label="Contact">
                            <span asp-validation-for="Contact" class="text-danger"></span>
                        </div>*@
                        <div class="form-group">
                            <input type="submit" value="Book Your car" class="btn-md btn-theme float-start w-100" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

