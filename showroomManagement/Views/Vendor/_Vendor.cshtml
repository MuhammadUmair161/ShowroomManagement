@model showroomManagement.Models.Vendor

<div class="mb-2 acd-group">
    <div class="card-header bg-primary rounded-0">
        <h5 class="mb-0">
            <a href="#collapse" class="btn-block text-white text-left acd-heading" data-toggle="collapse">Add Vendor</a>
        </h5>
    </div>
    <div id="collapse" class="collapse" data-parent="#accordionsimplefill">
        <div class="card-body">
            <div class="row">
                <form asp-action="_Vendor" class="w-100">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Name" class="form-control" placeholder="Vendor Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Address" class="form-control" placeholder="Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add Vendor" class="btn btn-primary" />
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
